<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.vergleich.fedex.hypo_caching"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Splash Screen -->
        <activity
            android:name="de.vergleich.fedex.hypo_caching.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.vergleich.fedex.hypo_caching.WhackAMoleActivity"
            android:label="@string/title_activity_whack_amole" >
        </activity>
        <!-- TODO -->
        <activity
            android:name="de.vergleich.fedex.hypo_caching.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="de.vergleich.fedex.hypo_caching.SammelQRActivity"
            android:label="@string/title_activity_sammel_qr" >
        </activity>
        <!-- Holzhacken -->
        <activity
            android:name="de.vergleich.fedex.chopatree.ChopATreeActivity"
            android:label="@string/chopatree_title"
            android:parentActivityName="de.hypoport.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
    </application>

</manifest>